<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="240"
                android:startColor="@color/gradient_black"
                android:centerColor="@color/gradient_black"
                android:endColor="@color/gradient_gray" />
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
    <item
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="line">
            <stroke
                android:width="3dp"
                android:color="#ffffff" />
        </shape>
    </item>
    <item
        android:left="10dp"
        android:right="10dp">
        <rotate
            android:fromDegrees="90">
            <shape android:shape="line">
                <stroke
                    android:width="3dp"
                    android:color="#ffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>